#include <stdio.h>

//6명의 몸무게를 입력받아 몸무게의 평균을 출력하는 프로그램을 작성하세요. (출력은 소수 첫째자리까지로 합니다)
int main(){
	
	float weight[6];
	float sum = 0.0;
	float avg = 0.0;
	int a;
	
	printf("정수 6개를 입력하세요: ");
	
	for(a=0 ; a<6 ; a++){
		scanf("%f",&weight[a]);
		sum += weight[a];	
	}
	
	avg = sum / 6.0;
	printf("%.1f\n",avg);
	
	return 0;
}
